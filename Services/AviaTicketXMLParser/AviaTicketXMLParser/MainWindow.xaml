        <Button Content="Зупинити програму" HorizontalAlignment="Left" Margin="202,208,0,0" VerticalAlignment="Top" Width="114" Height="23" Click="Button_Click_1"/>
        <Label Name="oneTicketTextBox" Content="" HorizontalAlignment="Left" Margin="11,159,0,0" VerticalAlignment="Top" Width="306"/>

    </Grid>
